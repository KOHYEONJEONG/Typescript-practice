//타입스크립트 설정파일(초기 : tsc --init으로 파일 자동 생성)
{
  "compilerOptions": {
    // 🚨compilerOptions:  자바스크립트 설정
    //target은 중요한 옵션이다. 구형 브라우저에서 실행을 해야할 때는 이전 버전으로 돌려야하기에 중요하다.
    "target": "ESNext", //🚨컴파일 JS 버전 변경 (ES5, ESNext: js 최신버전)
    "module": "ESNext", //환경에 따라 모듈 조절 (Commonjs, ESNext)
    "outDir": "dist", //js파일 생성되는 위치(js파일을 직접 수정할일이 없기에 보기 좋게 폴더로 관리하자.)
    "strict": false, //엄격한 type 검사(true: type 추론 가능하지 않으면 에러남)
    //"strictNullChecks": false, //엄격한 null 체크를 안하겠다(strict 옵션이 false면 선언을 안해도 알아서 false)
    "moduleDetection": "force", //개별 모듈이 자동으로 생성됨(js파일 확인해보면 됨)
    "skipLibCheck": true //타입 검사를 생략하는 옵션
  },
  "ts-node": {
    "esm": true // ts-node로도 esmodule 시스템을 실행(ts-node .\src\index.ts) <-🚨 v.20부터는 사용불가함으로 tsx 사용하자
  },
  "include": ["src"] //tsc 명령어 입력하면 컴파일되어야할 위치 지정
}
